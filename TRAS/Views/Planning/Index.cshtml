
@{
    ViewBag.Title = "Index";
}

@section planningScript{

    <script type="text/javascript" src="https://maps.googleapis.com/maps/api/js?v=3.exp&sensor=false"></script>
    <script src="http://ajax.googleapis.com/ajax/libs/jqueryui/1.10.3/jquery-ui.min.js"></script>
    <link href="~/Content/css/googleMap.css" rel="stylesheet" />

    <script src="~/Scripts/knockout-3.0.0.js"></script>
    <script src="~/Scripts/app/Planning/planningModules.js"></script>
}
 
    <h2>Planning</h2>
    <div class="container">
        <section class="col-md-3">
            <h3>Locations</h3>

            <form data-bind="submit: addItem">
                <input data-bind="value: newItemText" placeholder="What do you want to visit?" />
                <button type="submit">Add</button>
            </form>

            <ul data-bind="foreach: items, visible: items().length > 0">
                <li>
                    <label data-bind="text: query"></label>
                    <a href="#" data-bind="click: $parent.removeItem">Remove</a>
                </li>
            </ul>

            <button data-bind="click: geolocateMe" id="geolocateMe"> Where I am? </button>
            <button data-bind="click: drawPath" id="drawPath"> Path </button>
        </section>

        <section class="col-md-9">
            <div class="row">
                <div id="map" style="height:500px" ></div>
            </div>
            <div class="row">
                <div class="col-md-4">Visual RDF</div>
            </div>
        </section>

    </div>



   